<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
        id="com.vkorneyev.cordovaStarIOPlugin"
        version="0.0.1">

    <name>StarIOPrinter</name>
    <description>
        Cordova plugin to print using StarIO Printers.
    </description>

    <keywords>
		Star Printer, StarIO, iOS
    </keywords>

    <license>Apache 2.0</license>

    <author>Vladyslav Korneyev</author>

    <!-- cordova -->
    <engines>
        <engine name="cordova" version=">=3.0.0" />
		<!-- <engine name="StarIO.framework" version="2.0.0" platform="ios" scriptSrc="src/ios/StarIO.framework"/>-->
    </engines>
    <!-- interface -->
    <js-module src="www/starprinter.js" name="StarPrinter">
        <clobbers target="plugin.printer" />
    </js-module>

    <!-- ios -->
    <platform name="ios">
        <config-file target="config.xml" parent="/*">
            <feature name="StarIOPrint">
                <param name="ios-package" value="StarIOPrint"/>
            </feature>
        </config-file>
		
        <header-file src="src/ios/RasterDocument.h" />
        <source-file src="src/ios/RasterDocument.m" />		
        <header-file src="src/ios/StarBitmap.h" />
        <source-file src="src/ios/StarBitmap.m" />		
        <header-file src="src/ios/StarIOPrint.h" />
        <source-file src="src/ios/StarIOPrint.m" />
        <source-file src="src/ios/StarIO.framework"/>

	<framework src="ExternalAccessory.framework" />
        <framework src="CoreBluetooth.framework" />

    </platform>
</plugin>
